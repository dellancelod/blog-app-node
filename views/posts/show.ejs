<h2><%= post.title %></h2>
<p><%= post.content %></p>
<p><em>Автор: <%= post.author.username %></em></p>

<hr>
<h3>Коментарі:</h3>
<ul>
  <% comments.forEach(comment => { %>
    <li><strong><%= comment.author.username %>:</strong> <%= comment.content %></li>
  <% }) %>
</ul>

<% if (user) { %>
  <form action="/comments/<%= post._id %>" method="POST">
    <textarea name="content" placeholder="Залишити коментар" required></textarea><br>
    <button type="submit">Надіслати</button>
  </form>
<% } else { %>
  <p><a href="/login">Увійдіть</a>, щоб залишити коментар.</p>
<% } %>
